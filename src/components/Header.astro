---
import { Icon } from 'astro-icon/components';
const currentPath = Astro.url.pathname;
---
<header class="header-container">
    <div class="header-top">
        <a class="header-icon" href="/">
            <img src="/favicon-32x32.png" alt="favicon" class="favicon" />
            <span class="brand-text">buh.moe</span>
        </a>
        <button class="theme-toggle" aria-label="Toggle theme">
            <Icon name="lucide:sun" class="theme-icon sun-icon" />
            <Icon name="lucide:moon" class="theme-icon moon-icon" />
        </button>
    </div>
    
    <div class="header-bottom">
        <nav class="header-nav">
            <div class="nav-left">
                <a href="/" class:list={[{ active: currentPath === '/' }]}>
                    <Icon name="lucide:home" />
                    <span>Home</span>
                </a>
                <a href="/blog" class:list={[{ active: currentPath.startsWith('/blog') }]}>
                    <Icon name="lucide:pen-line" />
                    <span>Blog</span>
                </a>
                <a href="/specs" class:list={[{ active: currentPath.startsWith('/specs') }]}>
                    <Icon name="lucide:cpu" />
                    <span>Specs</span>
                </a>
                <a href="/projects" class:list={[{ active: currentPath.startsWith('/projects') }]}>
                    <Icon name="lucide:cog" />
                    <span>Projects</span>
                </a>
            </div>
            <div class="nav-right">
            <!--
                <a href="https://cobalt.buh.moe/" target="_blank">
                    <Icon name="lucide:chevrons-right" />
                    <span>cobalt</span>
                </a>
            -->
                <a href="/ffxiv" class:list={[{ active: currentPath.startsWith('/ffxiv') }]}>
                    <Icon name="fa6-solid:meteor" />
                    <span>FFXIV</span>
                </a>
                <a href="/yakuza" class:list={[{ active: currentPath.startsWith('/yakuza') }]}>
                    <Icon name="fa6-solid:dragon" />
                    <span>Yakuza</span>
                </a>
            </div>
        </nav>
    </div>
</header>

<script>
    const themeToggle = document.querySelector('.theme-toggle');
    const html = document.documentElement;
    
    // Check for saved theme preference or default to system preference
    const savedTheme = localStorage.getItem('theme');
    const systemPreference = window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
    const currentTheme = savedTheme || systemPreference;
    
    // Apply theme using data attribute
    html.setAttribute('data-theme', currentTheme);
    
    themeToggle?.addEventListener('click', () => {
        const currentTheme = html.getAttribute('data-theme');
        const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
        html.setAttribute('data-theme', newTheme);
        localStorage.setItem('theme', newTheme);
    });
</script>

<style>
    .header-container {
        background-color: var(--bg-primary);
        position: relative;
    }
    
    .header-top {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1em 4em 0.5em 4em;
    }

    @media (max-width: 768px) {
        .header-top {
            padding: 0.75em 1em 0.5em 1em;
        }
    }

    .header-icon {
        display: flex;
        align-items: center;
        gap: 0.5em;
    }

    .favicon {
        width: 1.5em;
        height: 1.5em;
    }

    .brand-text {
        font-weight: bold;
        font-family: var(--font-main);
    }

    .theme-toggle {
        background: none;
        border: 1px solid var(--border-color);
        border-radius: 50%;
        width: 2em;
        height: 2em;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: background-color 0.2s ease;
        position: relative;
        padding: 0;
    }

    .theme-toggle:hover {
        background-color: var(--bg-secondary);
    }

    .theme-icon {
        width: 1em;
        height: 1em;
        position: absolute;
    }

    html:not([data-theme="dark"]) .sun-icon,
    html[data-theme="light"] .sun-icon {
        opacity: 1;
    }

    html:not([data-theme="dark"]) .moon-icon,
    html[data-theme="light"] .moon-icon {
        opacity: 0;
    }

    html[data-theme="dark"] .sun-icon {
        opacity: 0;
    }

    html[data-theme="dark"] .moon-icon {
        opacity: 1;
    }

    .header-bottom {
        padding: 0 4em;
        overflow-x: auto;
        -webkit-overflow-scrolling: touch;
        position: relative;
        scrollbar-width: none; /* Firefox */
        -ms-overflow-style: none; /* IE */
        border-bottom: 1px solid var(--border-color);
    }

    .header-bottom::-webkit-scrollbar {
        display: none; /* Chrome/Safari */
    }

    @media (max-width: 768px) {
        .header-bottom {
            padding: 0 1em;
        }
    }

    .header-nav {
        display: flex;
        justify-content: space-between;
        align-items: stretch;
        min-width: max-content;
        position: relative;
        z-index: 1;
    }

    @media (max-width: 768px) {
        .header-nav {
            justify-content: flex-start;
            min-width: fit-content;
        }
    }

    .nav-left,
    .nav-right {
        display: flex;
        gap: 2em;
        align-items: stretch;
    }

    @media (max-width: 768px) {
        .nav-left,
        .nav-right {
            gap: 1.5em;
        }
    }

    @media (max-width: 480px) {
        .nav-left,
        .nav-right {
            gap: 1em;
        }
    }

    .nav-left {
        margin-right: 2em;
    }

    @media (max-width: 768px) {
        .nav-left {
            margin-right: 1.5em;
        }
    }

    @media (max-width: 480px) {
        .nav-left {
            margin-right: 1em;
        }
    }

    .header-nav a {
        color: var(--text-primary);
        font-weight: 500;
        text-decoration: none;
        position: relative;
        white-space: nowrap;
        padding: 0.5em 0;
        display: flex;
        align-items: center;
        gap: 0.5em;
    }

    @media (max-width: 768px) {
        .header-nav a {
            padding: 0.75em 0.5em;
            font-size: 0.95em;
        }
    }

    .header-nav a::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        height: 1px;
        background-color: transparent;
        z-index: 2;
    }

    .header-nav a:hover:not(.active)::after {
        background-color: var(--text-tertiary);
    }

    .header-nav a.active {
        color: var(--accent-red);
    }

    .header-nav a.active::after {
        background-color: var(--accent-red);
    }
</style>